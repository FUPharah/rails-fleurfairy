<div class = "container all-plants">

  <div >
    <h1 style="color: #04ACB5;">Post your plant</h1>
  </div>

  <%= simple_form_for(@plant) do |f| %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :city,
      input_html: {data: {city_autocomplete_target: "city"}, class: "d-none"},
      wrapper_html: {data: {controller: "city-autocomplete", city_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>
      <%= f.input :photo, as: :file %>
    </div>

    <div>
      <%= f.button :submit, class:"button-blue" %>
    </div>

  <% end %>

</div>
